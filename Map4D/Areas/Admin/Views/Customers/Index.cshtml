@model IEnumerable<Map4D.Models.Customer>

@{
    /**/

    ViewBag.Title = "Danh sách khách hàng";
    Layout = "~/Areas/Admin/Views/Shared/LayoutAdmin.cshtml";
}
<div class="box box-primary">
    <div class="box-header">
        <h2>Danh sách khách hàng</h2>
    </div>
    <div class="box-body">
        <table id="example" class="table table-striped table-bordered nowrap" style="width:100%">
            <thead>
                <tr>
                    <th>STT</th>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Company)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Phone)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.RegisterDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Status)
                    </th>
                    <th>Hành động</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
        <div class="modal fade" id="myModal" role="dialog">
            <div class="modal-dialog">

                <!-- Modal content-->
                <div class="modal-content">

                    <div class="modal-body text-center">
                        <i class="fas fa-exclamation text-danger"></i>
                        <h3><b>Bạn chắc chắn muốn xóa ?</b></h3>
                        <p>Khách hàng: ... </p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default btnKhong" data-dismiss="modal">Không</button>
                        <button type="button" class="btn btn-primary btnConfirmDelete" data-dismiss="modal">Đồng ý</button>
                    </div>
                </div>

            </div>
        </div>
        <div class="modal fade" id="myModalSuccess" role="dialog">
            <div class="modal-dialog">

                <!-- Modal content-->
                <div class="modal-content">

                    <div class="modal-body text-center">
                        <i class="fas fa-check text-success"></i>
                        <h3><b>Đã xóa thành công</b></h3>
                    </div>
                    <div class="modal-footer">
                        <a href="@Url.Action("Index","Customers","Admin")" class="btn btn-default">Đóng</a>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
<script src="~/Scripts/js/loadPagingCustomers.js"></script>
<script src="~/Scripts/deleteCustomer.js"></script>
