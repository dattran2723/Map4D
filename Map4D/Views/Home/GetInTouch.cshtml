@model Map4D.Models.Contact
@{
    Layout = null;
}


<div class="row w-100 text-center" id="get-in-touch">
    <div id="contact"></div>
    <div class="col-md-12 text-center" id="get-in-touch-title">
        <h1>@Map4D.Resources.My_texts.LiênHệ</h1>
    </div>
    <div class="col-md-4 mx-auto text-center" id="get-in-touch-icon">
        <a href="https://www.facebook.com/Map-4D-256271355058426/" class="mr-2" title="Facebook" target="_blank"><label><i class="fab fa-facebook-f"></i></label></a>
    </div>
    <div class="col-12 text-center" id="get-in-touch-form">
        @using (Html.BeginForm("GetInTouch", "Home", FormMethod.Post, new { @class = "getintouch" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger errorTotal d-none" })
            <div class="input-group col-12 col-sm-10 col-md-7 col-lg-5 mx-auto text-center input-form">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "w-50", @id = "your-name", @placeholder = Map4D.Resources.My_texts.Hovaten } })

                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "d-none" })

                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "w-50", @id = "your-email", @placeholder = "Email" } })

                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "d-none" })

                @Html.EditorFor(model => model.Subject, new { htmlAttributes = new { @class = "w-100", @id = "subject", @placeholder = Map4D.Resources.My_texts.Tiêuđề } })

                @Html.ValidationMessageFor(model => model.Subject, "", new { @class = "d-none" })

                @Html.TextAreaFor(model => model.Message, new { @class = "w-100", @placeholder = Map4D.Resources.My_texts.TinNhắn, @name = "message", @id = "message" })

                @Html.ValidationMessageFor(model => model.Message, "", new { @class = "d-none" })
            </div>
            <input type="submit" name="name" value="@Map4D.Resources.My_texts.GửiNgayBâyGiờ" class="btn btn-success mx-auto" id="btn-submit" />
        }
    </div>
</div>

